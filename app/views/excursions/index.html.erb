		<div class="col-xs-12 col-md-7 hidden-sm hidden-xs">
			<%# Physically create the box where the map will live %> 
			<div id="map">
			</div>

			<%# polish people are smarter %>
			<script type="text/javascript">
		        var foodSpots = [
					["Roscoe's Chicken and Waffles",34.047516,-118.346233,1],
					["Chosun Galbee",34.052378,-118.310442,2],
					["Sushi Gen",34.047238,-118.238668,3],
					["Sugarfish",34.05351,-118.463093,4],
					["Joan's on 3rd",34.072699,-118.371809,5],
					["Lucques",34.082333,-118.375404,6],
					["AOC",34.073397,-118.381919,7],
					["Larchmont Wine & Cheese",34.075315,-118.32395,8],
					["Noshi Sushi",34.076032,-118.305355,9]
		        ];

		        var foodMap = new google.maps.Map(document.getElementById('map'), {
		          zoom: 11,
		          center: new google.maps.LatLng(34.047516, -118.346233),
		          mapTypeId: google.maps.MapTypeId.ROADMAP
		        });

		        var infowindow = new google.maps.InfoWindow();

		        var marker, i;

		        for (i = 0; i < foodSpots.length; i++) {
		          marker = new google.maps.Marker({
		            position: new google.maps.LatLng(foodSpots[i][1], foodSpots[i][2]),
		            map: foodMap,
		            title: foodSpots[i][0]
		          });

		          google.maps.event.addListener(marker, 'click', (function(marker, i) {
		            return function() {
		              infowindow.setContent(foodSpots[i][0]);
		              infowindow.open(foodMap, marker);
		            }
		          })(marker, i));
		        }
			</script>
		</div>

